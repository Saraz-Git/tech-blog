<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Tech Blog</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />

  </head>

  <body>
    <div>
      <header>
        <nav>
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          {{#if loggedIn}}
            <button class="btn-no-style" id="logout">Logout</button>
          {{else}}
            <a href="/login">Login</a>
            <a href="/signup">Signup</a>
          {{/if}}
        </nav>
        {{#if isDashboard}}
          <div>
            <h1>My Dashboard</h1>
          </div>
        {{else}}
          <div>
            <h1>The Tech Blog</h1>
          </div>
        {{/if}}
      </header>
      <main>
        {{{body}}}
      </main>
    </div>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>