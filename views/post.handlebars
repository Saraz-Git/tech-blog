<div class="card">
  <div class="card-header">
    <h3>{{title}}</h3>
    <h6>Posted by {{user.name}} on {{format_date date_created}}</h6>
  </div>
  <div class="card-body"><p>{{content}}</p>
  </div>
</div>

<div>{{comment.content}}</div>
{{log this}}

{{#if loggedIn}}
  <form class="comment-form">
    <div></div>
    <div>
      <label>Comment</label>
      <textarea id="content-comment" type="text">Enter comment here...</textarea>
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
  <script src="/js/comment.js"></script>
{{/if}}