<div class="card">
  <div class="card-header">
    <h3>{{title}}</h3>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body"><p>{{content}}</p>
  </div>
</div>

{{#each comments as |comment|}}
  <div class="card">
    <div class="card-body">
      <p>{{content}}<br /><br />- Commented by
        {{user.name}}
        on
        {{format_date date_created}}</p>
    </div>
  </div>
{{/each}}

{{#if loggedIn}}
  <form class="card comment-form" data-id="{{id}}">
    <div class="card-header"></div>
    <div class="card-body">
      <div class="form-group">
        <label>Comment</label>
        <textarea id="content-comment" type="text">Enter comment here...</textarea>
      </div>
      <div class="form-group">
        <button data-id="{{id}}" type="submit">Submit</button>
      </div></div>
  </form>
  <script src="/js/comment.js"></script>
{{/if}}