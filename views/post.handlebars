<div class="card">
  <div class="card-header">
    <h3>{{title}}</h3>
    <h6>Posted by {{user.name}} on {{format_date date_created}}</h6>
  </div>
  <div class="card-body"><p>{{content}}</p>
  </div>
</div>

<div>{{comment.content}}</div>
{{log this}}

{{#if loggedIn}}
  <form class="card comment-form">
    <div class="card-header"></div>
    <div class="card-body">
      <div class="form-group">
        <label>Comment</label>
        <textarea id="content-comment" type="text">Enter comment here...</textarea>
      </div>
      <div class="form-group">
        <button type="submit">Submit</button>
      </div></div>
  </form>
  <script src="/js/comment.js"></script>
{{/if}}